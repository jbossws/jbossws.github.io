<?xml version="1.0" encoding="UTF-8"?>

<web-app
   version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
   <servlet>
      <servlet-name>HelloService</servlet-name>
      <servlet-class>org.jboss.test.ws.jaxws.samples.schemavalidation.HelloImpl</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>HelloService</servlet-name>
      <url-pattern>/hello</url-pattern>
   </servlet-mapping>
   <servlet>
      <servlet-name>ValidatingHelloService</servlet-name>
      <servlet-class>org.jboss.test.ws.jaxws.samples.schemavalidation.ValidatingHelloImpl</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>ValidatingHelloService</servlet-name>
      <url-pattern>/validatingHello</url-pattern>
   </servlet-mapping>
</web-app>